<div class="content">
  <h1>Welcome to the Cats app!</h1>
    <% @cats.each do |cat| %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="cats thumbnail">
          <a href="/cats/<%= cat.id %>"><h2 class="col-xs 8"><%= cat.name %> - <%= cat.age %> --- <%= number_to_currency(cat.price) %></h2></a>
          <img class="img-responsive" src="<%= cat.image_check %>" alt="Cat">
          <p><%= cat.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>