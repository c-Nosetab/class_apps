
<div class="content">
  <h1>Add Cat! --- MEEEOW!</h1>

  <%= form_tag "/cats/#{@cat.id}", method: :patch do %>
    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name, "#{@cat.name}"%>
    </div>
    <div>
      <%= label_tag :age %>
      <%= text_field_tag :age, "#{@cat.age}"%>
    </div>
    <div>
      <%= label_tag :price %>
      <%= text_field_tag :price, "#{@cat.price}"%>
    </div>
    <div>
      <%= label_tag :description %>
      <%= text_field_tag :description, "#{@cat.description}"%>
    </div>

    <%= submit_tag :MEEEOW %>


  <% end %>

</div>

